/* pages/game/game.wxss */
/* 游戏画布样式 */
canvas{
  border: 1rpx solid;
  width: 320px;
  height: 320px;
}

/* 方向键整体区域 */
.btnBox{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 方向键第二行 */
.btnBox view{
  display: flex;
  flex-direction: row;
}
/* 所有的方向键 */
.btnBox button{
  width: 90rpx;
  height: 90rpx;
}

button{
  margin: 10rpx;
}