<!-- index.wxml -->
<view class="container">
  <!-- 标题 -->
  <view class="title">游戏选关</view>
  <!-- 关卡列表 -->
  <view class="levellist">
  
    <view class="level" wx:for="{{levels}}" wx:key="levels{{index}}" bindtap="chooseLevel" data-level = '{{index}}'>
      <image src="/images/{{item}}"></image>
      <text>第{{index+1}}关</text>
    </view>
    
  </view>
  <button class="continue-button" bindtap="continueLevel"><text>去闯关</text>
  <text class="new-line">第{{lastIndex}}关</text></button>
</view>